<!--components/swiper/swiper.wxml-->
<swiper class="swiper"
        circular="true"
        autoplay="true"
        interval="2500"
        indicator-dots="true"
        indicator-color="#fff"
        indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.image}}" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
